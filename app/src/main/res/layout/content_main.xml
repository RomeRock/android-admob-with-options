<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.romerock.modules.android.admob.example.MainActivity"
    tools:showIn="@layout/activity_main">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bitmap"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Banner sizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdmobSizes"
        style="@style/btnAdmobOption"
        android:layout_below="@+id/btnAdmobSimple"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNative"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        style="@style/btnAdmobOption"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ejemplos Admob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="20sp"
        android:textSize="12sp" />

    <Button
        android:text="Interstitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdmobInterstitial"
        android:layout_below="@+id/btnAdmobSizes"
        style="@style/btnAdmobOption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btnAdmobOption"
        android:id="@+id/btnAdmobVideo"
        android:layout_below="@+id/btnAdmobInterstitial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Simple banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdmobSimple"
        style="@style/btnAdmobOption"
        android:layout_below="@+id/btnNative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
